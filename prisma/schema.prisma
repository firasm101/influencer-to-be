generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  niche         String?
  platforms     String[]  @default([])
  socialHandle  String?
  onboarded     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts        Account[]
  sessions        Session[]
  trackedCreators TrackedCreator[]
  nicheInsights   NicheInsight[]
}

model TrackedCreator {
  id            String   @id @default(cuid())
  userId        String
  platform      String
  handle        String
  displayName   String?
  followerCount Int      @default(0)
  bio           String?
  avatarUrl     String?
  lastSynced    DateTime?
  createdAt     DateTime @default(now())

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts Post[]

  @@unique([userId, platform, handle])
}

model Post {
  id             String   @id @default(cuid())
  creatorId      String
  platform       String
  postType       String
  caption        String?  @db.Text
  mediaUrl       String?
  thumbnailUrl   String?
  likes          Int      @default(0)
  comments       Int      @default(0)
  shares         Int      @default(0)
  views          Int      @default(0)
  postedAt       DateTime?
  engagementRate Float    @default(0)
  externalId     String?
  createdAt      DateTime @default(now())

  creator  TrackedCreator @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  analysis PostAnalysis?

  @@unique([platform, externalId])
}

model PostAnalysis {
  id            String   @id @default(cuid())
  postId        String   @unique
  hookType      String?
  contentFormat String?
  topic         String?
  whyItWorked   String?  @db.Text
  sentiment     String?
  keyTakeaways  String[] @default([])
  analyzedAt    DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model NicheInsight {
  id          String   @id @default(cuid())
  userId      String
  insightType String
  insightText String   @db.Text
  dataPoints  Int      @default(0)
  generatedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
